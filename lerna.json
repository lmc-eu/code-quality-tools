{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": ["release"],
      "conventionalCommits": true,
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "createRelease": "github",
      "push": false,
      "message": "chore: release [CI-SKIP]",
      "ignoreChanges": ["test/**", "yarn.lock"]
    }
  }
}
